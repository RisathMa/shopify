
{{ 'luxury-core.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .luxury-marquee {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 1.5rem 0;
    overflow: hidden;
    white-space: nowrap;
    border-top: 1px solid rgba(0,0,0,0.05);
    border-bottom: 1px solid rgba(0,0,0,0.05);
    display: flex;
  }

  .luxury-marquee__inner {
    display: flex;
    animation: marquee {{ section.settings.speed }}s linear infinite;
  }

  .luxury-marquee__item {
    font-size: {{ section.settings.font_size }}rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0 4rem;
    font-family: var(--font-body-family);
    display: flex;
    align-items: center;
  }

  .luxury-marquee__dot {
    width: 6px;
    height: 6px;
    background: var(--luxury-gold);
    border-radius: 50%;
    margin-right: 4rem;
    display: inline-block;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  
  .luxury-marquee:hover .luxury-marquee__inner {
    animation-play-state: paused;
  }
{%- endstyle -%}

<div class="luxury-marquee">
  <div class="luxury-marquee__inner">
    {%- for i in (1..10) -%}
      <div class="luxury-marquee__item">
        <span>{{ section.settings.text }}</span>
        <div class="luxury-marquee__dot"></div>
      </div>
    {%- endfor -%}
    {%- for i in (1..10) -%}
      <div class="luxury-marquee__item">
        <span>{{ section.settings.text }}</span>
        <div class="luxury-marquee__dot"></div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Luxury Marquee",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Worldwide Express Shipping • New Arrivals Weekly • Free Returns",
      "label": "Marquee Text"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "Scroll Speed",
      "default": 30
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 0.8,
      "max": 3,
      "step": 0.2,
      "unit": "rem",
      "label": "Font Size",
      "default": 1
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#fcfbf9",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#050505",
      "label": "Text Color"
    }
  ],
  "presets": [
    {
      "name": "Luxury Marquee"
    }
  ]
}
{% endschema %}
