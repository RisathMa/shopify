{{ 'luxury-core.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .luxury-product {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .luxury-product__media {
    width: 100%;
  }

  .luxury-product__info {
    width: 100%;
    padding: 2rem 1.5rem;
  }

  @media screen and (min-width: 990px) {
    .luxury-product__media {
      width: 65%;
      padding-right: 4rem;
    }

    .luxury-product__info {
      width: 35%;
      position: sticky;
      top: 2rem;
      padding: 4rem 2rem 2rem 0;
      max-height: 100vh;
      overflow-y: auto;
    }
  }

  /* Typography */
  .luxury-product__title {
    font-size: 2.5rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .luxury-product__price {
    font-size: 1.2rem;
    color: #444;
    margin-bottom: 2rem;
    font-family: var(--font-body-family);
  }

  /* Variant Picker */
  .luxury-variant-label {
    display: block;
    margin-bottom: 0.8rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .luxury-swatch-list {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .luxury-swatch {
    cursor: pointer;
    border: 1px solid #e5e5e5;
    background: transparent;
    padding: 1rem 1.5rem;
    transition: all 0.3s ease;
    min-width: 3rem;
    text-align: center;
    font-size: 0.9rem;
  }
  
  .luxury-swatch:hover,
  .luxury-swatch.selected {
    border-color: var(--luxury-black);
    background: var(--luxury-black);
    color: var(--luxury-ivory);
  }

  /* Add to Cart */
  .luxury-add-to-cart {
    width: 100%;
    padding: 1.5rem;
    background: var(--luxury-black);
    color: #fff;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    margin-top: 2rem;
    font-size: 1.1rem;
    transition: transform 0.2s ease;
  }

  .luxury-add-to-cart:hover {
    transform: translateY(-2px);
  }
  
  .luxury-description {
    margin-top: 3rem;
    font-size: 1rem;
    line-height: 1.6;
    color: #333;
  }
  
  /* Details Accordion */
  .luxury-details details {
    border-top: 1px solid #e5e5e5;
    padding: 1.5rem 0;
  }
  
  .luxury-details details:last-child {
    border-bottom: 1px solid #e5e5e5;
  }
  
  .luxury-details summary {
    list-style: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
  }
  
  .luxury-details summary::-webkit-details-marker {
    display: none; /* Hide default triangle */
  }

  .luxury-details__content {
    margin-top: 1rem;
    font-size: 0.95rem;
    color: #555;
  }

{%- endstyle -%}

<div class="luxury-product page-width-desktop">
  
  <!-- Media Column -->
  <div class="luxury-product__media">
    {% render 'luxury-product-media-gallery' %}
  </div>

  <!-- Info Column -->
  <div class="luxury-product__info">
    {%- form 'product', product, id: 'product-form-installment', class: 'installment caption-large' -%}
      
      <h1 class="luxury-product__title h2">{{ product.title }}</h1>
      
      <div class="luxury-product__price">
        {{ product.price | money }}
        {% if product.compare_at_price > product.price %}
          <s style="color: #999; margin-left: 0.5rem">{{ product.compare_at_price | money }}</s>
        {% endif %}
      </div>

      <!-- Variant Picker -->
      {%- unless product.has_only_default_variant -%}
        {%- for option in product.options_with_values -%}
          <div class="luxury-variant-picker">
            <label class="luxury-variant-label">{{ option.name }}</label>
            <div class="luxury-swatch-list">
              {%- for value in option.values -%}
                <button type="button" 
                        class="luxury-swatch {% if option.selected_value == value %}selected{% endif %}"
                        data-value="{{ value | escape }}"
                        onclick="// minimal JS to handle variant update would go here or standard Dawn listener">
                  {{ value }}
                </button>
              {%- endfor -%}
            </div>
          </div>
        {%- endfor -%}
      {%- endunless -%}

      <!-- Add to Cart -->
      <button type="submit" name="add" class="luxury-add-to-cart">
        {% if product.available %}
          Add to Bag
        {% else %}
          Sold Out
        {% endif %}
      </button>

      <div class="luxury-description">
        {{ product.description }}
      </div>

      <!-- Details -->
      <div class="luxury-details" style="margin-top: 3rem;">
        <details>
          <summary>Size & Fit <span>+</span></summary>
          <div class="luxury-details__content">
            Fits true to size. Model is 6'1" and wearing a size M.
          </div>
        </details>
        <details>
          <summary>Composition & Care <span>+</span></summary>
          <div class="luxury-details__content">
            100% Organic Cotton. Dry clean only.
          </div>
        </details>
        <details>
          <summary>Shipping & Returns <span>+</span></summary>
          <div class="luxury-details__content">
            Free worldwide shipping on orders over $500. Returns accepted within 14 days.
          </div>
        </details>
      </div>

    {%- endform -%}
  </div>
</div>

