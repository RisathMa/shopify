
{{ 'luxury-core.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .luxury-hero {
    position: relative;
    height: 100vh;
    width: 100%;
    overflow: hidden;
    color: {{ section.settings.text_color }};
  }

  .luxury-hero__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .luxury-hero__media img,
  .luxury-hero__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }
  
  .luxury-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0, {{ section.settings.overlay_darkness | divided_by: 100.0 }});
    z-index: 2;
  }

  .luxury-hero__content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    text-align: center;
    padding: 0 2rem;
  }

  .luxury-hero__heading {
    font-size: 5rem;
    margin-bottom: 2rem;
    line-height: 1;
    transform: translateY(30px);
    opacity: 0;
    animation: luxuryFadeUp 1s var(--ease-luxury) forwards;
    animation-delay: 0.2s;
  }

  @media screen and (min-width: 750px) {
    .luxury-hero__heading {
      font-size: 8rem;
    }
  }

  .luxury-hero__subheading {
    font-size: 1.5rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 4rem;
    transform: translateY(30px);
    opacity: 0;
    animation: luxuryFadeUp 1s var(--ease-luxury) forwards;
    animation-delay: 0.4s;
  }

  .luxury-hero__buttons {
    display: flex;
    gap: 2rem;
    transform: translateY(30px);
    opacity: 0;
    animation: luxuryFadeUp 1s var(--ease-luxury) forwards;
    animation-delay: 0.6s;
  }
  
  .luxury-hero__scroll {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    opacity: 0;
    animation: luxuryFadeIn 2s ease forwards;
    animation-delay: 1.5s;
    color: white;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  @keyframes luxuryFadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes luxuryFadeIn {
    to { opacity: 0.8; }
  }
{%- endstyle -%}

<div class="luxury-hero">
  <div class="luxury-hero__media">
    {%- if section.settings.video_url != blank -%}
      <video autoplay muted loop playsinline poster="{{ section.settings.image | image_url }}">
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 3840 | image_tag: 
         loading: 'eager', 
         sizes: '100vw', 
         widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' 
      }}
    {%- else -%}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>

  <div class="luxury-hero__overlay"></div>


  
  <div class="luxury-hero__scroll">Scrolldown</div>
</div>

